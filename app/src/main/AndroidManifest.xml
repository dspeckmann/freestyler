<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.speckmann.danny">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="me.speckmann.danny.MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="me.speckmann.danny.GameActivity" android:label="@string/title_activity_game" />
        <activity android:name="me.speckmann.danny.FeedbackActivity" android:label="@string/title_activity_feedback" />
        <activity android:name="me.speckmann.danny.WordPackagesActivity" android:label="@string/title_activity_wordpackages" />
        <activity android:name="me.speckmann.danny.ListOfRapsActivity" android:label="@string/title_activity_list" />
        <activity android:name="me.speckmann.danny.EndActivity" android:label="@string/title_activity_end" />

        <service android:name="me.speckmann.danny.AudioService" />
    </application>

</manifest>
